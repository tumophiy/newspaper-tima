<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<%= link_to "New article", new_article_path %>
<p>
<div id="articles">
  <% @articles.each do |article| %>
    <div class="card text-center">
      <div class="card-header">Featured</div>
      <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"><%= article.description %></p>
        <%= link_to "Show this article", article, class:"btn btn-outline-primary" %>
        <%= link_to "Delete this article", article, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-outline-danger" %>
      </div>
      <div class="card-footer text-muted"><%= time_ago_in_words(article.created_at) %></div>
    </div>
    <p>
  <% end %>
</div>
